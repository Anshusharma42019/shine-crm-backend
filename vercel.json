{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "api/cron-job.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/cron-job", "dest": "api/cron-job.js" },
    { "src": "/(.*)", "dest": "server.js" }
  ],
  "crons": [
    {
      "path": "/api/cron-job",
      "schedule": "51 12 * * *"
    }
  ]
}
